{{#each diaries}}

<div class="card card-body mb-2 mt-2">
    <h4>{{title}}</h4>
    <p>{{date}}</p>
    <p>{{entry}}</p>
    <a class="btn btn-dark btn-block mb-2" href="/entry/edit/{{id}}">Edit</a>
    <form action="/entry/{{id}}?_method=DELETE" method="post">
    <input type="hidden" name="_method" value="DELETE">
    <input type="submit" class="btn btn-danger btn-block" value="Delete">
    </form>
</div>

{{else}}
<p>No diary entries</p>

{{/each}}